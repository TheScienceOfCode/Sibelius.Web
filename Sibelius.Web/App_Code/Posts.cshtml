
@helper Headline(Sibelius.Web.Models.Post post, bool img = false)
{
    <a href="~/Posts/Show/@post.Id">
        @if (img)
        {
            <img class="img-responsive hidden-xs" src="@post.ImageUrl"/>
            <div class="over hidden-xs"></div>
        }
        <p class="text-content">
            @post.Title
        </p>
    </a>
}
