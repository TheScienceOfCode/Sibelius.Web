<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @if (ViewBag.MetaDescription != null)
    {
        <meta name="description" content="@ViewBag.MetaDescription" />
    }
    @if (ViewBag.MetaKeywords != null)
    {
        <meta name="keywords" content="@ViewBag.MetaKeywords" />
    }
    @if (ViewBag.MainImage != null)
    {
        <meta name="og:image" content="@ViewBag.MainImage" />
    }
    <title>@ViewBag.Title - The Science of Code</title>
    @Styles.Render("~/Content/css")
    @if (Session["fonts"] != null)
    {
        @Html.Partial("_Fonts")
    }
</head>
@{
    ViewBag.bodyclass = ViewBag.bodyclass == null ? "light-body" : ViewBag.bodyclass;
}

<body class="@ViewBag.bodyclass">
    <div id="main-navbar" class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle toggle-menu menu-left push-body" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a id="main-logo" class="navbar-brand" href="~/Home">
                    <img src="~/Content/logo-science-code.png" alt="Logo The Science of Code" />
                </a>
            </div>
            @{
                string curUrl = Request.Url.AbsoluteUri.ToUpper();
                string coursesClass = curUrl.Contains("COURSES") ? "class=active" : "";
                string postsClass = curUrl.Contains("POSTS") ? "class=active" : "";
                string aboutClass = curUrl.Contains("ABOUT") ? "class=active" : "";
                string articlesClass = curUrl.Contains("ARTICLES") ? "class=active" : "";
            }
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li @articlesClass>
                        <a href="~/Home">Revista</a>
                    </li>
                    <li @coursesClass>
                        <a href="~/Courses">Cursos</a>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li @aboutClass>
                        <a href="~/Home/About"><small>¿Qué es esto?</small></a>
                    </li>
                    <li class="hidden-xs">
                        <a href="http://facebook.com/TheScienceOfCode" target="_blank"><small><i class="fa fa-facebook"></i></small></a>
                    </li>
                    <li class="hidden-xs">
                        <a href="https://twitter.com/ScienceOfCode" target="_blank"><small><i class="fa fa-twitter"></i></small></a>
                    </li>
                </ul>
            </div>
        </div>        
    </div>
    <!-- Left menu element -->
    <nav class="cbp-spmenu cbp-spmenu-vertical cbp-spmenu-left">
        <br /><br />
        <a href="~/Home"><small><span class="glyphicon glyphicon-book">&nbsp;</span> Revista</small></a>
        <a href="~/Courses"><small><span class="glyphicon glyphicon-pencil">&nbsp;</span> Cursos</small></a>
        <a href="~/Home/About"><small><span class="glyphicon glyphicon-question-sign">&nbsp;</span> ¿Qué es esto?</small></a> 
        <a class="toggle-menu menu-left push-body"><small><span class="glyphicon glyphicon-remove">&nbsp;</span> Cerrar</small></a>
    </nav>
    <div class="container body-content">
        @if (Request.IsAuthenticated)
        {
            <div class="row">
                <div class="col-xs-12">
                    <div class="btn-group btn-group-justified">
                        @if (User.IsInRole("admin"))
                        {
                            
                            <a class="btn btn-default" href="~/AdminArticles">
                                ARTICLES
                            </a>
                            <a class="btn btn-default" href="~/AdminCourses">
                                COURSES
                            </a>
                            <a class="btn btn-default" href="~/AdminLicenses">
                                LICENSES
                            </a>
                        }
                        <a class="btn btn-default" href="~/AdminQuestions">
                            QUESTIONS
                        </a>
                        <a class="btn btn-default" href="~/Account">
                            USERS
                        </a>
                    </div>
                    @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
                    {
                        @Html.AntiForgeryToken()

                        <a class="btn btn-primary" href="javascript:document.getElementById('logoutForm').submit()">Log out</a>
                    }
                </div>
            </div>
        }
        @RenderBody()
    </div>
    <div class="bot-menu">
        <div class="container">
            <div class="row">
                <div class="col-sm-3 small">
                    <h6>CONTENIDO</h6>
                    <a href="~/Home/" target="_blank">Portada</a><br />
                    <a href="~/Courses/" target="_blank">Cursos</a><br />
                    <a href="~/Questions" target="_blank">Pregúntanos</a><br /><br />
                </div>
                <div class="col-sm-3 small">
                    <h6>SOCIAL</h6>
                    <a href="https://github.com/TheScienceOfCode/Sibelius.Web" target="_blank"><i class="fa fa-github"></i> Source code</a><br />
                    <a href="http://facebook.com/TheScienceOfCode" target="_blank">Facebook</a><br />
                    <a href="https://twitter.com/ScienceOfCode" target="_blank">Twitter</a><br /><br />
                </div>
                <div class="col-sm-3 small">
                    <h6>POSTMORTEM</h6>
                    <a href="~/Posts/">Posts</a><br />
                    <a href="~/Questions">Pregúntanos</a><br /><br />
                </div>
                <div class="col-sm-3 small">
                    <h6>LEGAL</h6>
                    <a href="~/Home/Privacy">Privacidad</a><br /><br />
                </div>
            </div>
        </div>
    </div>
    <footer>        
        <div class="row">
            <div class="col-xs-12 text-center">
                <small>Apoyados por</small><br />
                <a href="http://thesmallapps.com" target="_blank">
                    <img alt="The Small Apps - Crafting Big Dreams" style="border-width:0;  max-height: 80px;" src="~/Content/the-small-apps-b.png" />
                </a>
                <h5><i class="fa fa-cc"></i> 2013 - @DateTime.Now.Year.</h5>
                <br />
            </div>
        </div>
    </footer>
    @{var legal = HttpContext.Current.Session["legal"];}
    @if (legal == null || (bool)legal != true)
    {
        @Html.Partial("_LegalInfo")
    }
    
    @Html.Partial("_Pubadv")

    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jsutils")
    @if (Session["fonts"] == null)
    {
        @Html.Partial("_Fonts")
        Session["fonts"] = true;
    }
    @Html.Partial("_SocialLoader")
    @RenderSection("scripts", required: false)

    <script>
        jQuery(document).ready(function($) {
	        $('.toggle-menu').jPushMenu();
        });
    </script>
    <script>
        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
            m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
        })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

        ga('create', 'UA-59510259-1', 'auto');
        ga('send', 'pageview');
    </script>
    
    @{  var pubadv = HttpContext.Current.Session["pubadv"];
        int timeout = 5000;    
    }
    @if ((int)pubadv > 0)
    {
        timeout = 1000;
    }
    <script>
        $(document).ready(
            function() {
                $('#pubadv-accept').on('click', function(){
                    $('#pubadv').hide();
                });
                setTimeout(checkAds, @timeout);
            }            
        );

        function checkAds() {
            var ad = document.querySelector("ins.adsbygoogle");
            if (ad && ad.innerHTML.replace('/\s / g', "").length == 0) {
                $.ajax({
                    type: 'post',
                    data: {'value':true},
                    url: '@Url.Content("~/Home/PubAdvAccept")',
                    success: 
                        function(result) {
                            var string = window.location.href.toUpperCase(), substring = "HOME";
                            if(string.indexOf(substring) == -1)
                                var s = ('@Url.Content("~/Home/Index")'); //window.location.replace
                        }
                });
                $('#pubadv').show('slow');
                $('.pubdiv').html('<div class="alert alert-red"><button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button><h4>¡Importante!</h4><h4>Queremos seguir prestando un servicio gratuito y compartiendo el conocimiento, pero AdBlock está arruinando internet libre. <br/>No queremos cobrar membresías, a cambio te pedimos desactivar tu AdBlock.</h4></div>');
            }
            else{
                $.ajax({
                    type: 'post',
                    data: {'value':false},
                    url: '@Url.Content("~/Home/PubAdvAccept")'
                });
            }
        }
    </script>
</body>
</html>
