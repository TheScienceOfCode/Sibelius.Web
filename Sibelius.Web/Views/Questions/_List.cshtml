@model IEnumerable<Sibelius.Web.Models.Question>

<div class="col-xs-12">
    <h4><span class="glyphicon glyphicon-exclamation-sign"></span> ÚLTIMAS RESPUESTAS</h4>
    <hr />
    @foreach (var question in Model)
    {
        <h4>
            <a href="~/Questions/Show/@question.Id">@question.Title</a>
        </h4>
        <div class="row">
            @Social.CleanBtn(string.Format("http://thescienceofcode.azurewebsites.net/Questions/Show/{0}", question.Id))
        </div>
        <hr />
    }
    @Html.Partial("~/Views/Shared/_Pagination.cshtml",
    (Sibelius.Web.Models.PaginationVM)ViewBag.PaginationVM)
    <div class="row">
        <div class="col-xs-12">
            <div class="btn-group-justified">
                <a class="btn btn-primary" href="~/Questions">¡Hacer mi pregunta! <span class="glyphicon glyphicon-bullhorn"></span></a>
            </div>
        </div>
    </div>
</div>