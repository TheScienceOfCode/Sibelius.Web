@model Sibelius.Web.Models.Question
@{
    ViewBag.Title = Model.Title;
    ViewBag.MetaKeywords = Model.Tags;
    Sibelius.Web.Models.Collaborator collaborator = ViewBag.Collaborator;
    string nombre = Model.Name == null ? "Anónimo" : Model.Name;
}
<br />
<div class="row">
    <div class="col-xs-12">
        <center>
            <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
            <!-- Questions -->
            <ins class="adsbygoogle"
                 style="display:block;max-width:970px;width:100%;"
                 data-ad-client="ca-pub-1426867402604645"
                 data-ad-slot="9148704012"
                 data-ad-format="auto"></ins>
            <script>
                (adsbygoogle = window.adsbygoogle || []).push({});
            </script>
            <div class="pubdiv"></div>
        </center>

        <br />
    </div>
</div>
<br />
<div class="row">
    <div class="col-md-8">
        <h3>@Model.Title</h3>
        <blockquote>
            <p>@Model.Text</p>
            <small>@nombre</small>
        </blockquote>
        <br />
        <div class="row text-center">
            @Social.DefaultBtn(string.Format("http://thescienceofcode.azurewebsites.net/Questions/Show/{0}",Model.Id))
        </div>
        <br />
        <div class="text-justify">
            @Html.Raw(Model.HtmlAnswer)
        </div>
        <br />
        <div class="row text-center">
            @Social.DefaultBtn(string.Format("http://thescienceofcode.azurewebsites.net/Questions/Show/{0}", Model.Id))
        </div>
        <br />
        <div class="row">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="col-xs-12">
                        <h4>¿Quién contestó?</h4>
                    </div>
                    <div class="col-sm-10">
                        <table class="table table-responsive">
                            <tbody>
                                <tr>
                                    <td>Nick</td>
                                    <td><strong>@collaborator.Nickname</strong></td>
                                </tr>
                                <tr>
                                    <td>Nombre completo</td>
                                    <td><strong>@collaborator.Fullname</strong></td>
                                </tr>
                                <tr>
                                    <td>Universidad</td>
                                    <td><strong>@collaborator.University</strong></td>
                                </tr>
                                <tr>
                                    <td>Interéses</td>
                                    <td><strong>@collaborator.Topics</strong></td>
                                </tr>
                                <tr>
                                    <td>
                                        Social
                                    </td>
                                    <td>
                                        @if (collaborator.Facebook != null)
                                        {
                                            <a class="btn btn-primary" href="@collaborator.Facebook" target="_blank"><i class="fa fa-facebook"></i></a>
                                        }
                                        @if (collaborator.Twitter != null)
                                        {
                                            <a class="btn btn-primary" href="@collaborator.Twitter" target="_blank"><i class="fa fa-twitter"></i></a>
                                        }
                                        @if (collaborator.Google != null)
                                        {
                                            <a class="btn btn-primary" href="@collaborator.Google" target="_blank"><i class="fa fa-google"></i></a>
                                        }
                                        @if (collaborator.Github != null)
                                        {
                                            <a class="btn btn-primary" href="@collaborator.Github" target="_blank"><i class="fa fa-github"></i></a>
                                        }
                                        @if (collaborator.LinkedIn != null)
                                        {
                                            <a class="btn btn-primary" href="@collaborator.LinkedIn" target="_blank"><i class="fa fa-linkedin"></i></a>
                                        }


                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <div class="col-sm-2 hidden-xs">
                        <img class="img-responsive center-block" src="@collaborator.ImgUrl" />
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-xs-12">
                <h3>Discusión</h3>
                <h5>¡Haga sus comentarios o preguntas aquí!</h5>
                <div id="disqus_thread"></div>
            </div>
        </div>
       @Social.Disqus(
            Model.Title, 
            string.Format("http://thescienceofcode.azurewebsites.net/Questions/Show/{0}",Model.Id))
    </div>
    <div class="col-md-4" id="questions-list">
        @{Html.RenderAction("List", "Questions", null);}
    </div>
</div>

@section Scripts {
    <script src="~/Scripts/app/questions.js"></script>
}
