@model Sibelius.Web.Models.Question

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal col-xs-12">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="col-xs-12">
                ¿De qué trata tu pregunta?
            </label>
            <div class="col-xs-12">
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-xs-12">
                Describe con detalle tu pregunta
            </label>
            <div class="col-xs-12">
                @Html.TextAreaFor(model => model.Text, new { @class = "form-control", rows = 5 })
                @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger" })
            </div>
        </div>        

        <div class="form-group">
            <label class="col-xs-12">
                ¿Cómo te llamas? <small>Deja en blanco para enviar como anónimo</small>
            </label>
            <div class="col-xs-12">
                @Html.EditorFor(model => model.SourceCodeUrl, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SourceCodeUrl, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-xs-12">
                Si tu pregunta es de programación,
                ¿tienes el código fuente? Puedes usar <a href="http://pastebin.com" target="_blank">Pastebin</a> o dejar
                el campo vacío.
            </label>
            <div class="col-xs-12">
                @Html.EditorFor(model => model.SourceCodeUrl, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SourceCodeUrl, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                <input type="submit" value="Enviar mi pregunta" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

