@model IEnumerable<Sibelius.Web.Models.License>

@{
    ViewBag.Title = "Admin Licenses";
}

<h2>Admin Licenses</h2>

<p>
    <a class="btn btn-primary" href="~/AdminLicenses/Create">
        <span class="glyphicon glyphicon-plus"> </span>
    </a>
</p>
<table class="table table-striped table-responsive">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ShortName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ShortName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a class="btn btn-primary btn-sm" href="~/AdminLicenses/Edit/@item.Id">
                    <span class="glyphicon glyphicon-pencil"></span>
                </a>
                <a class="btn btn-default  btn-sm" href="~/AdminLicenses/Delete/@item.Id">
                    <span class="glyphicon glyphicon-trash"></span>
                </a>
            </td>
        </tr>
    }

</table>
