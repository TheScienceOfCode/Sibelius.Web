@model IEnumerable<Sibelius.Web.Models.Article>

@{
    ViewBag.Title = "Admin Articles";
}

<h2>Admin Articles</h2>

<p>
    <a class="btn btn-primary" href="~/AdminArticles/Create">
        <span class="glyphicon glyphicon-plus"> </span>
    </a>
</p>
<table class="table table-striped table-responsive" >
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Section)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.License)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Portrait)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Section)
        </td>
        <td>
            @if (item.License == null)
            {
                <span>N/A</span>
            }
            else
            {
                @item.License.ShortName
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Portrait)
        </td>
        <td>
            <a class="btn btn-primary btn-sm" href="~/Articles/Show/@item.Id">
                <span class="glyphicon glyphicon-share"></span>
            </a>
            <a class="btn btn-primary btn-sm" href="~/AdminArticles/Edit/@item.Id">
                <span class="glyphicon glyphicon-pencil"></span>
            </a>
            <a class="btn btn-default  btn-sm" href="~/AdminArticles/Delete/@item.Id">
                <span class="glyphicon glyphicon-trash"></span>
            </a>
        </td>
    </tr>
}

</table>
