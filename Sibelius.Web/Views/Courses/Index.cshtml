@model IEnumerable<Sibelius.Web.Models.Course>

@{
    ViewBag.Title = "Cursos";
}
<div class="row">
    <br />
    <div class="col-xs-12 text-center">
        <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
        <!-- CoursesTsoc -->
        <ins class="adsbygoogle"
             style="display:inline-block;width:728px;height:90px"
             data-ad-client="ca-pub-1426867402604645"
             data-ad-slot="4384418411"></ins>
        <script>
        (adsbygoogle = window.adsbygoogle || []).push({});
        </script>
    </div>
</div>
<br />
@if (Model.Count(c => c.Active) > 0)
{
    <div class="row well">
        @foreach (var course in Model.Where(c => c.Active))
        {
            <div class="col-md-6">
                @Html.Partial("_CourseBrowser", course)
            </div>
        }
    </div>
}

@if (Model.Count(c => !c.Active) > 0)
{
    <div class="row">
        <div class="col-xs-12">
            <h3>Cursos anteriores</h3>
            <hr />

            @foreach (var course in Model.Where(c => !c.Active))
            {
                <div class="col-md-6">
                    @Html.Partial("_CourseBrowser", course)
                </div>
            }
        </div>
    </div>
}
