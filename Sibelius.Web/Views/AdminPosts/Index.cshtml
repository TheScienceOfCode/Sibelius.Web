@model IEnumerable<Sibelius.Web.Models.Post>

@{
    ViewBag.Title = "Admin Posts";
}

<h2>Admin Posts</h2>

<p>
    <a class="btn btn-primary" href="~/AdminPosts/Create">
        <span class="glyphicon glyphicon-plus"> </span>
    </a>
</p>
<div class="table-responsive">
    <table class="table table-striped table-sm">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Section)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Section)
                </td>
                <td>
                    <a class="btn btn-primary btn-sm" href="~/Posts/Show/@item.Id">
                        <span class="glyphicon glyphicon-share"></span>
                    </a>
                    <a class="btn btn-primary btn-sm" href="~/AdminPosts/Edit/@item.Id">
                        <span class="glyphicon glyphicon-pencil"></span>
                    </a>
                    <a class="btn btn-default  btn-sm" href="~/AdminPosts/Delete/@item.Id">
                        <span class="glyphicon glyphicon-trash"></span>
                    </a>
                </td>
            </tr>
        }

    </table>
</div>