@model Sibelius.Web.Models.Post
@{
    Layout = null;
    ViewBag.bodyclass = "dark-body";
}

<div style="display:none">
    <span id="desc">@ViewBag.MetaDescription</span>
    <span id="keywords">@ViewBag.MetaKeywords</span>
    <span id="title">@ViewBag.Title</span>
    <span id="mainImageUrl">@ViewBag.MainImage</span>
</div>

@Html.Partial("~/Views/PostsInternal/_Post.cshtml", Model)
<div class="row">
    <div class="col-xs-12">
        <div class="panel">
            <div class="panel-body">
                <h3>Discusión</h3>
                <h5>¡Haga sus comentarios o preguntas aquí!</h5>
                <div id="disqus_thread"></div>
            </div>
        </div>
    </div>
</div>
@Social.Disqus(
    Model.Title,
    string.Format("http://thescienceofcode.azurewebsites.net/Posts/Show/{0}", Model.Id))

