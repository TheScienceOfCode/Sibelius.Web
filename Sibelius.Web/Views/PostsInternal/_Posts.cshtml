@model List<Sibelius.Web.Models.Post>

@for (int i = 0; i < Model.Count; i += 2)
{   
    var item = Model[i];
    item.Html = null;
    
    @Html.Partial("_Post", item)
    if (i + 1 < Model.Count)
    {
        item = Model[i + 1];
        item.Html = null;
        @Html.Partial("_Post", item)
    }
    
    if (i == 4)
    {
        <div class="row">
            <div class="col-xs-12">
                @Custom.Pub()
                <br />
            </div>
        </div>
    }
}