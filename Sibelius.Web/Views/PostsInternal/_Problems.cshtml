@model IEnumerable<Sibelius.Web.Models.Post>

<div style="display:none">
    <span id="desc">Problemas de maratones de programación con explicaciones y soluciones</span>
    <span id="keywords">Maratones, programación, adhoc, graphs, dp, solutions, data structures</span>
</div>
<div class="well problems-div">
    <div class="row text-center">
        <h1>Resolvamos un problema</h1>
        @Social.DefaultBtn("http://thescienceofcode.azurewebsites.net/Posts/Section?name=Problemas")
    </div>
    <hr />
    <table class="small table table-responsive table-striped">
        <thead>
            <tr>
                <th>Tipo</th>
                <th class="hidden-xs">Autor</th>
                <th class="text-center">Problema y explicación</th>
                <th class="text-center hidden-xs">Social</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                var data = item.Title.Split('[');
                var title = data.Length == 1 ? data[0] : data[1].Substring(0, data[1].IndexOf(']'));
                <tr>
                    <td>@title</td>
                    <td class="hidden-xs">@item.Author</td>
                    <td class="text-center">
                        <a class="btn btn-primary posts-btn" data-url="@Url.Content("~/Posts/Show/" +item.Id)">
                            <span class="glyphicon glyphicon-folder-open"></span> <span class="hidden-xs">&nbsp;Abrir</span>
                            <img src="~/Content/loading-sm.gif" style="display:none;" />
                        </a>
                    </td>
                    <td class="hidden-xs">
                        @Social.CleanBtn(string.Format("http://thescienceofcode.azurewebsites.net/Posts/Show/{0}", item.Id), "")
                    </td>
            </tr>
            }
        </tbody>
    </table>
</div>