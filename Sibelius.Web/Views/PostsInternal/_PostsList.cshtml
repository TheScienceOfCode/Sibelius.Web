@model IEnumerable<Sibelius.Web.Models.Post>

@{  bool problems = ViewBag.Section != null && ViewBag.Section.ToUpper() == "PROBLEMAS"; }

@if (problems)
{
    @Html.Partial("_Problems", Model);
}
else
{
    @Html.Partial("_Posts", Model);
}
@Html.Partial("~/Views/Shared/_Pagination.cshtml", 
    (Sibelius.Web.Models.PaginationVM)ViewBag.PaginationVM)