@model Sibelius.Web.Models.Article

<div class="box">
    <a href="~/Articles/Show/@Model.Id">
        <div class="background-image" style="background-image: url(@Model.ImageUrl); background-position: center bottom;"></div>
        <div class="headline">
            <span class="sm-title"><small>@Model.Section.ToUpper()</small></span>
            <div class="md-title col-xs-12">
                @Model.Title
            </div>
            <div class="sm-bottom text-center col-xs-12">
                <div class="row">
                    <div class="col-xs-6 fb" >
                        <div class="fb-like" data-href="http://thescienceofcode.azurewebsites.net/Articles/Show/@Model.Id" data-layout="button_count" data-action="like" data-show-faces="true"></div>
                    </div>
                    <div class="col-xs-6 tw" style="padding-top: 8px;">
                        <a href="https://twitter.com/share" class="twitter-share-button" data-url="http://thescienceofcode.azurewebsites.net/Articles/Show/@Model.Id" data-via="ScienceOfCode">Tweet</a>
                    </div>
                </div>
            </div>
        </div>
    </a>
</div>
