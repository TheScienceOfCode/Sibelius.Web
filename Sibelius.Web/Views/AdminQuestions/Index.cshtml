@model IEnumerable<Sibelius.Web.Models.Question>

@{
    ViewBag.Title = "Admin Questions";
}

<h2>Admin Questions</h2>

<p>
    <a class="btn btn-primary" href="~/AdminQuestions/Create">
        <span class="glyphicon glyphicon-plus"> </span>
    </a>
</p>
<div class="table-responsive">
    <table class="table table-striped table-sm" style="table-layout:fixed">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Answered)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Answered)
                </td>
                <td>
                    <a class="btn btn-primary btn-sm" href="~/AdminQuestions/Edit/@item.Id">
                        <span class="glyphicon glyphicon-pencil"></span>
                    </a>
                    <a class="btn btn-default  btn-sm" href="~/AdminQuestions/Delete/@item.Id">
                        <span class="glyphicon glyphicon-trash"></span>
                    </a>
                </td>
            </tr>
        }

    </table>
</div>
