@model IEnumerable<Sibelius.Web.Models.Collaborator>

@{
    ViewBag.Title = "Admin Collaborators";
}

<h2>Admin Collaborators</h2>

<p>
    <a class="btn btn-primary" href="~/AdminCollaborators/Create">
        <span class="glyphicon glyphicon-plus"> </span>
    </a>
</p>
<div class="table-responsive">
    <table class="table table-striped table-sm">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nickname)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nickname)
                </td>
                <td>
                    <a class="btn btn-primary btn-sm" href="~/AdminCollaborators/Edit/@item.Id">
                        <span class="glyphicon glyphicon-pencil"></span>
                    </a>
                    <a class="btn btn-default  btn-sm" href="~/AdminCollaborators/Delete/@item.Id">
                        <span class="glyphicon glyphicon-trash"></span>
                    </a>
                </td>
            </tr>
        }

    </table>
</div>
