@model Dictionary<string, Sibelius.Web.Models.Article>
@{
    ViewBag.Title = "Portada";
}

<div class="row">
    @{
        Sibelius.Web.Models.Article first = Model["0"];
        Sibelius.Web.Models.Article second = Model["1"];
        Sibelius.Web.Models.Article third = Model["2"];
    }
    <div class="col-md-8">    
                   
        <h3><a href="~/Articles/Show/@first.Id">@first.Title</a></h3>        
        <h4>@first.Section</h4>
        <p>Por @first.Author</p>
        <div class="col-sm-8">
            <p class="article-text-intro">
                @first.Intro
            </p>
            <br />
            <p><a class="btn btn-primary" href="~/Articles/Show/@first.Id">Continuar leyendo <span class="glyphicon glyphicon-chevron-right"></span></a></p>
        </div>
        <div class="col-md-4">
            <img class="img-responsive" src="@first.ImageUrl" />
            <div class="panel panel-default">
                <div class="panel-body text-center">
                    @Html.Raw(first.HtmlImageFooter)
                </div>
            </div>
           
        </div>
    </div>
    <div class="col-md-4">
        <div class="row">
            <h3><a href="~/Articles/Show/@second.Id">@second.Title</a></h3>
            <h4>@second.Section</h4>
            <p>Por @second.Author</p>
                
        </div>
        <div class="row">
            <h3><a href="~/Articles/Show/@third.Id">@third.Title</a></h3>
            <h4>@third.Section</h4>
            <p>Por @third.Author</p>
        </div>
    </div>
</div>

<div class="row">
    
</div>