@model Sibelius.Web.Models.MainpageVM
@{
    ViewBag.Title = "Portada";
    ViewBag.MetaDescription = "Somos una comunidad dedicada a la enseñanza de las Ciencias de la Computación como Arte Liberal";
    ViewBag.MetaKeywords = "computación, software, programación, desarrollo, tutoriales, cursos";
    ViewBag.MainImage = Model.Articles[0].ImageUrl;

    var articles = Model.Articles;
    var posts = Model.Posts;
    int bigArticles = 5;
}
<br />
@if ((int)Session["pubadv"] > 0)
{
    <div class="row well">
        <div class="col-xs-12">
            No podrás navegar hasta que verifiquemos que has desactivado el AdBlock. <br />
            Una vez lo desactives, <b>recarga la página y espera a que aparezca el Ad</b>, antes de hacer clic en el siguiente botón: <br /><br />
            <a class="btn btn-primary" href="~/Home/Unban">Volver a dónde estaba</a>
        </div>
    </div>
}
<div class="row">
    <div class="col-xs-12">
        <center>
            <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
            <!-- Main TSOC -->
            <ins class="adsbygoogle"
                 style="display:block;max-width:970px;width:100%;"
                 data-ad-client="ca-pub-1426867402604645"
                 data-ad-slot="7023487219"
                 data-ad-format="auto"></ins>
            <script>
                (adsbygoogle = window.adsbygoogle || []).push({});
            </script>
            <div class="pubdiv"></div>
        </center>
    </div>
</div>

<div class="row">
    <div class="col-sm-8">
        <div class="row">
            <div class="col-xs-12">
                @Articles.Headline(articles[0])
            </div>
        </div>
        <div class="row">
            @for (int i = 1; i < bigArticles; ++i)
            {
                <div class="col-sm-6">
                    @Articles.Headline(articles[i])
                </div>
            }
        </div>        
    </div>
    <div class="col-sm-4">
        <div class="row">
            <div class="col-xs-12">
                <span class="section-span">
                    Últimos Posts
                </span>
                <div class="section-div tsoc-group">
                    @{ var img = true;}
                    @foreach (var post in posts)
                    {
                        @Posts.Headline(post, img)
                        img = false;
                    }
                    <a class="section-btn-more" href="~/Posts">Ver más Posts ></a>
                </div>
            </div>           
        </div>
        <div class="row" id="questions-list">
            <div class="col-xs-12">
                @{Html.RenderAction("List", "Questions", new { pagination = false }); }
            </div>
        </div>
    </div>
    <div class="col-sm-8">
        <div class="row">
            <div class="col-md-4">
                <span class="section-span">
                    Más artículos
                </span>
                <div class="tsoc-group tsoc-group-big">
                    @{ var mid = (articles.Count - bigArticles + 1) / 3; }
                    @for (int i = bigArticles; i < bigArticles + mid; ++i)
                    {
                        @Articles.HeadlineMore(articles[i])
                    }
                </div>
            </div>
            <div class="col-md-4">
                <div class="tsoc-group tsoc-group-big">
                    @for (int i = bigArticles + mid; i < bigArticles + mid * 2; ++i)
                    {
                        @Articles.HeadlineMore(articles[i])
                    }
                </div>
            </div>
            <div class="col-md-4">
                <div class="tsoc-group tsoc-group-big">
                    @for (int i = bigArticles + mid * 2; i < articles.Count(); ++i)
                    {
                        @Articles.HeadlineMore(articles[i])
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/Scripts/app/questions.js"></script>
}

